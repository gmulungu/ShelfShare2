<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtShelfShare2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="604dp"
        android:fontFamily="sans-serif-black"
        android:text="ShelfShare"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="newCategory"
        android:text="Create New Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="97dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="500dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCreateItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="398dp"
        android:onClick="newItem"
        android:text="Create New Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateCategory"
        app:layout_constraintStart_toStartOf="@+id/btnCreateCategory"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateCategory"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnViewItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="viewItems"
        android:text="View Items"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCreateItem"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateItem" />
</androidx.constraintlayout.widget.ConstraintLayout>